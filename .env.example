# Core
APP_ENV=development
APP_URL=http://localhost:8000
BASE_URL=http://localhost:8000
SITE_NAME=FastAPI Platform
DEFAULT_LANGUAGE=ar

# Database
DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/app_db
TEST_DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/app_db_test
DATABASE_HOSTNAME=localhost
DATABASE_PORT=5432
DATABASE_NAME=app_db
DATABASE_USERNAME=app_user
DATABASE_PASSWORD=app_password
DATABASE_SSL_MODE=disable

# Security / Auth
SECRET_KEY=change-me
REFRESH_SECRET_KEY=change-me
REFRESH_ALGORITHM=HS256
ALGORITHM=RS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080
RSA_PRIVATE_KEY_PATH=./private_key.pem
RSA_PUBLIC_KEY_PATH=./public_key.pem
# Optional: supply PEM contents directly; app writes them to the paths above.
# RSA_PRIVATE_KEY=<PEM_PRIVATE_KEY>
# RSA_PUBLIC_KEY=<PEM_PUBLIC_KEY>
OTP_ENCRYPTION_KEY=change-me
PASSWORD_STRENGTH_REQUIRED=true
PASSWORD_STRENGTH_MIN_SCORE=3
GLOBAL_RATE_LIMIT=100/minute
# JWT rotation (optional). Provide JSON maps of kid -> PEM key (single-line, escaped newlines).
JWT_KEY_ID=default
JWT_PRIVATE_KEYS={"default":"<PEM_PRIVATE_KEY>"}
JWT_PUBLIC_KEYS={"default":"<PEM_PUBLIC_KEY>"}

# Hosts / CORS
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000
FORCE_HTTPS=false

# Redis / Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_BACKEND_URL=redis://localhost:6379/0

# Logging / Observability
LOG_LEVEL=INFO
LOG_DIR=logs
USE_JSON_LOGS=true
ENABLE_METRICS=1
OTEL_ENABLED=
OTEL_EXPORTER_OTLP_ENDPOINT=
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Email
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_ACCESS_TOKEN=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=YourApp/1.0

# Firebase
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=
FIREBASE_MEASUREMENT_ID=

# Notifications / Features
DISABLE_EXTERNAL_NOTIFICATIONS=0
ENABLE_TRANSLATION=1
DEFAULT_NOTIFICATION_CHANNEL=in_app
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_QUEUE_TIMEOUT=30
MAX_BULK_NOTIFICATIONS=1000

# Typesense (optional)
TYPESENSE_ENABLED=false
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http
TYPESENSE_API_KEY=
TYPESENSE_COLLECTION=posts

# Static / Uploads
STATIC_ROOT=./static
UPLOADS_ROOT=./uploads
STATIC_CACHE_CONTROL=public, max-age=3600
UPLOADS_CACHE_CONTROL=public, max-age=3600

# Realtime gateway (Go)
REDIS_CHANNEL=realtime:broadcast
BIND_ADDR=:8081

# Realtime notifier (FastAPI -> Redis)
REALTIME_REDIS_URL=redis://localhost:6379/0
REALTIME_REDIS_CHANNEL=realtime:broadcast

# Amenhotep AI (optional)
AMENHOTEP_ONNX_PATH=data/amenhotep/amenhotep.onnx
HUGGINGFACE_API_TOKEN=

# Limits / Defaults
MAX_OWNED_COMMUNITIES=5
MAX_PENDING_INVITATIONS=50
INVITATION_EXPIRY_DAYS=14
FOLLOWERS_VISIBILITY=public
FOLLOWERS_SORT_PREFERENCE=date
DEFAULT_BLOCK_TYPE=temporary
ALLOW_REPOSTS=true

# Optional test toggles
USE_REAL_SERVICES=0
REMOTE_BASE_URL=
TEST_DB_CLEAN_STRATEGY=delete
TEST_SEED_USER_COUNT=20
